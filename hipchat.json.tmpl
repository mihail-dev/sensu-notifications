{
  "handlers": {
    "hipchat": {
      "command": "/etc/sensu/handlers/hipchat.rb -r $HIPCHAT_ROOM_NAME",
      "type": "pipe",
      "severities": [
        "ok",
        "critical",
        "unknown"
      ]
    }
  },
  "hipchat": {
     "apikey": "$HIPCHAT_ROOM_API_KEY",
     "server_url": "$HIPCHAT_SERVER_URL",
     "room": "$HIPCHAT_ROOM_NUMBER",
     "from": "Sensu Master"
  }
}